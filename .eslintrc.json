{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],

  "parser": "babel-eslint",

  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": true
  },

  "env": {
    "es6": true,
    "browser": true,
    "amd": true,
    "node": true
  },

  "plugins": [
    "flowtype"
  ],

  "rules": {
    "semi": "error"
  },

  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": false
    }
  }
}
